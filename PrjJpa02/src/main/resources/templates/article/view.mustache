{{>layout/header}}

	<table class="table table-hover">
	  <thead>
	    <tr>
	      <th scope="col">ID</th>
	      <td scope="col">{{article.id}}</td>
	    </tr>
	  </thead>
	  <tbody>
	    <tr>
	      <th scope="row">제목</th>
	      <td scope="col">{{article.title}}</td>
	    </tr>
	    <tr>
	      <th scope="row">내용</th>
	      <td scope="col">{{article.content}}</td>
	    </tr>
	    <tr>
	      <td scope="col" colspan="2">
			   <a href="/article/List" class="btn btn-secondary">목록</a>
			   <a href="/article/WriteForm" class="btn btn-secondary">새 글 쓰기</a>
			   <a href="/article/UpdateForm/{{id}}" class="btn btn-secondary">수정</a>
			   <a href="/article/Delete/{{id}}" class="btn btn-secondary">삭제</a>
	      </td>
	    </tr>
	  </tbody>
	</table>
{{>layout/footer}}